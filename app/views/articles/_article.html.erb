<div class="row">
  <div class="col-sm-8">
    <% @articles.each do |article| %>

      <div class="card">
        <div class="card-block">
          <h4 class="card-title">
            <%= link_to "#{article.title}", article %>
          </h4>
          <p class="card-text">
            <%= article.body %>
          </p>
        </div>
        <div class="card-footer">
          <%= link_to "Edit", edit_article_path(article), class: 'btn btn-info' %>
          <%= link_to 'Delete', article, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-warning' %>
        </div>
    <% end %>
  </div>
</div>
