<p id="notice"><%= notice %></p>

<div class="row">
  <div class="pull-left control-group">
    <%= link_to 'New Article', new_article_path, class: 'btn btn-info'%>
  </div>
  <div class="pull-right control-group">
    <%= paginate @articles %>
  </div>
</div>

<div class="col-sm-12">
  <% if (@articles.empty?) %>
    <br>
    <h2>Sorry, no articles found.</h2>
    <% else %>
  <% end %>
    
    <% @articles.each do |article| %>

    <div class="col-sm-6">
      <div class="panel-group">
        <div class="panel panel-default">
          <div class="container">
            <br>
            <%= markdown(article.title) %>
          </div>
          <div class="panel-body">
            <%= markdown(article.body) %>
          </div>

          <div class="panel-footer">
            Number of views: <%= article.impressionist_count %>
            <div class="pull-right control-group">
              <%= link_to "View", article_path(article), class: 'btn btn-xs btn-info' %>
              <%= link_to "Edit", edit_article_path(article), class: 'btn btn-xs btn-info' %>
              <%= link_to 'Delete', article, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-xs btn-warning' %>
            </div>
          </div>
        </div>
      </div> 
    </div>
  <% end %>
</div>
  